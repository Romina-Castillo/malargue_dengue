<%- include('partials/_header') %>

<div class="container">
    <h1>Registrar Nuevo Paciente</h1>
    <form action="/pacientes/agregar" method="POST">
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" required>
        </div>

        <div class="form-group">
            <label for="apellido">Apellido</label>
            <input type="text" class="form-control" id="apellido" name="apellido" required>
        </div>

        <div class="form-group">
            <label for="tipo_caso">Tipo de Caso</label>
            <select class="form-control" id="tipo_caso" name="tipo_caso" required>
                <option value="Grupo A">Grupo A</option>
                <option value="Grupo B">Grupo B</option>
                <option value="Grupo C">Grupo C</option>
            </select>
        </div>

        <div class="form-group">
            <!-- Bot贸n para agregar una nueva direcci贸n -->
<a href="/direcciones/formulario" class="btn btn-info mb-3">Agregar Nueva Direcci贸n</a>

            <label for="id_direccion">Seleccionar Direcci贸n</label>
            <select class="form-control" id="id_direccion" name="id_direccion" required>
                <% direcciones.forEach(direccion => { %>
                    <option value="<%= direccion.id_direccion %>">
                        <%= direccion.barrio %> - <%= direccion.calle %> - <%= direccion.numero %>
                    </option>
                <% }) %>
            </select>
        
        </div>

        <button type="submit" class="btn btn-primary">Registrar Paciente</button>
    </form>
</div>

<%- include('partials/_footer') %>
