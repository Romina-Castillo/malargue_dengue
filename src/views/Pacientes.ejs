<%- include('partials/_header') %>

<div class="container">
    <h1>Lista de Pacientes</h1>

    <a href="/pacientes/formPaciente" class="btn btn-success mb-3">Agregar Paciente</a> 

    <table class="table table-bordered table-hover"> 
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tipo de Caso</th>
                <th>ID Direcci√≥n</th>
            </tr>
        </thead>
        <tbody>
            <% if (pacientes && pacientes.length > 0) { %>
                <% pacientes.forEach(patient => { %>
                    <tr>
                        <td><%= patient.id %></td>
                        <td><%= patient.nombre %></td>
                        <td><%= patient.apellido %></td>
                        <td><%= patient.tipo_caso %></td>
                        <td><%= patient.id_direccion %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No hay pacientes registrados.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('partials/_footer') %>
